-- Actualiza las tablas existentes sin borrar datos
-- Revisá y ejecutá con cuidado

-- === AREA ===
CREATE TABLE IF NOT EXISTS area (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    descripcion TEXT
);

-- === ESPECIALIDAD ===
CREATE TABLE IF NOT EXISTS especialidad (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    area_id INTEGER NOT NULL,
    nombre TEXT NOT NULL,
    FOREIGN KEY(area_id) REFERENCES area(id)
);

-- === PACIENTE ===
CREATE TABLE IF NOT EXISTS paciente (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    dni TEXT NOT NULL CHECK (length(dni) &lt;= 8) UNIQUE,
    nombre TEXT NOT NULL,
    fechaNacimiento TEXT NOT NULL,
    urgencia INTEGER CHECK (urgencia BETWEEN 1 AND 4)
);

-- === MEDICO ===
CREATE TABLE IF NOT EXISTS medico (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    nombre TEXT NOT NULL,
    matricula TEXT NOT NULL,
    especialidad_id INTEGER,
    FOREIGN KEY(especialidad_id) REFERENCES especialidad(id)
);

-- === HISTORIA CLINICA ===
CREATE TABLE IF NOT EXISTS historia_clinica (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    paciente_id INTEGER NOT NULL,
    medico_id INTEGER NOT NULL,
    area_id INTEGER NOT NULL,
    fecha TEXT NOT NULL,
    hora TEXT NOT NULL,
    detalles_sintomas TEXT,
    FOREIGN KEY(paciente_id) REFERENCES paciente(id),
    FOREIGN KEY(medico_id) REFERENCES medico(id),
    FOREIGN KEY(area_id) REFERENCES area(id)
);

-- === TURNO ===
CREATE TABLE IF NOT EXISTS turno (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    paciente_id INTEGER NOT NULL,
    medico_id INTEGER NOT NULL,
    fecha TEXT NOT NULL,
    hora TEXT NOT NULL,
    urgencia INTEGER NOT NULL CHECK(urgencia BETWEEN 1 AND 4),
    area_id INTEGER NOT NULL,
    FOREIGN KEY(paciente_id) REFERENCES paciente(id),
    FOREIGN KEY(medico_id) REFERENCES medico(id),
    FOREIGN KEY(area_id) REFERENCES area(id)
);

-- === USUARIO ===
CREATE TABLE IF NOT EXISTS usuario (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    nombre TEXT,
    contrasena TEXT,
    rol TEXT
);
